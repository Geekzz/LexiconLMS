@using LMS.Blazor.Client.Components.Home
@using LMS.Shared.DTOs.Read
@inject NavigationManager NavigationManager

<h2 class="text-center">KURSER</h2>
<div class="d-flex justify-content-center flex-column">
    <div class="col-md-8 mb-4 align-self-center w-100">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center"
                 data-bs-toggle="collapse"
                 data-bs-target="#courseDetailsCollapse"
                 aria-expanded="false"
                 aria-controls="courseDetailsCollapse"
                 style="cursor: pointer;">
                <h4 class="mb-0">@Course.Name</h4>
                <a class="d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708" />
                    </svg>
                </a>
            </div>
            <div class="collapse" id="courseDetailsCollapse">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead class="table-light">
                                <tr>
                                    <th class="align-middle">Type</th>
                                    <th class="align-middle">Name</th>
                                    <th class="align-middle">Description</th>
                                    <th class="align-middle">ID</th>
                                    <th class="align-middle"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="align-middle"><strong>Course</strong></td>
                                    <td class="align-middle">@Course.Name</td>
                                    <td class="align-middle">@Course.Description</td>
                                    <td class="align-middle">@Course.CourseId</td>
                                    <td class="d-flex justify-content-center align-items-center">
                                        <a href="/edit-course/@Course.CourseId" class="btn lexicon-button-tiny button-fontsize-tiny">Redigera</a>
                                    </td>
                                </tr>

                                <tr>
                                    <td colspan="5">
                                        <hr class="my-1 border-secondary">
                                    </td>
                                </tr>

                                @if (Course.Modules != null && Course.Modules.Any())
                                {
                                    @foreach (var module in Course.Modules)
                                    {
                                        <!-- Module Row -->
                                        <tr>
                                            <td class="align-middle"><strong>Module</strong></td>
                                            <td class="align-middle">@module.Name</td>
                                            <td class="align-middle">@module.Description</td>
                                            <td class="align-middle">@module.ModuleId</td>
                                            <td class="d-flex justify-content-center align-items-center">
                                                <a class="btn lexicon-button-tiny button-fontsize-tiny">Redigera</a>
                                            </td>
                                        </tr>

                                        <!-- Activity Rows -->
                                        @if (module.Activities != null && module.Activities.Any())
                                        {
                                            @foreach (var activity in module.Activities)
                                            {
                                                <tr>
                                                    <td class="align-middle">Activity</td>
                                                    <td class="align-middle">@activity.Name</td>
                                                    <td class="align-middle">@activity.Description</td>
                                                    <td class="align-middle">@activity.ActivityId</td>
                                                    <td class="d-flex justify-content-center align-items-center">
                                                        <a class="btn lexicon-button-tiny button-fontsize-tiny" href="/edit-activity/@activity.ActivityId">Redigera</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        <tr>
                                            <td class="d-flex justify-content-center w-100">
                                                <a class="btn lexicon-button mb-2 button-fontsize" href="/create-activity/@module.ModuleId">Ny aktivitet</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center align-middle">No modules available</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Buttons for Ny modul -->
                    <div class="d-flex justify-content-center align-items-center flex-column mt-4">
                        @* <a class="btn lexicon-button mb-2 button-fontsize">Ny aktivitet</a> *@
                        @* <ModuleModal CourseId=@Course.CourseId /> *@
                        <a class="btn lexicon-button button-fontsize" @onclick="NavigateToCreateModule">Ny modul</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public CourseDto Course { get; set; } = default!;

    private void HandleModuleAdded(ModuleDto newModule)
    {
        if (Course.Modules == null)
        {
            Course.Modules = new List<ModuleDto>();
        }

        Course.Modules.Add(newModule);
    }

    private void NavigateToCreateModule()
    {
        // Redirect to the new module page with the CourseId as a parameter
        NavigationManager.NavigateTo($"/create-module/{Course.CourseId}");
    }
}
