@using LMS.Shared.DTOs.Read

<div class="col-lg-6 col-mb-6 col-sm-12">
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Aktiviteter</h5>
        </div>
        <div class="card-body">
            @* <p class="card-text"></p> *@
            <div class="table-responsive">
                @if (SelectedModule?.Activities != null && SelectedModule.Activities.Any())
                {
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Activity</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Filhantering</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in SelectedModule.Activities)
                            {
                                <tr>
                                    <td>@activity.Name</td>
                                    <td>@activity.Description</td>
                                    <td>@activity.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@activity.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td><a href="javascript:void(0)" @onclick="HandleDocuments">Filer</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Klicka på en modul</p>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ModuleDto? SelectedModule { get; set; }

    private void HandleDocuments()
    {
        //
    }
}
